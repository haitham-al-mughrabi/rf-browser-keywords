{
  "name": "rf-browser-keywords",
  "displayName": "Robot Framework Keywords",
  "description": "VS Code extension to show and insert Robot Framework standard library keywords",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rfKeywords",
          "title": "Robot Framework",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "rfKeywords": [
        {
          "id": "rfProjectKeywords",
          "name": "Project Keywords"
        },
        {
          "id": "rfOfficialKeywords",
          "name": "Official Keywords"
        },
        {
          "id": "rfVariables",
          "name": "Variables"
        },
        {
          "id": "rfKeywordCustomizer",
          "name": "Keyword Customizer"
        }
      ]
    },
    "commands": [
      {
        "command": "rfKeywords.insertKeyword",
        "title": "Insert Keyword",
        "icon": "$(add)"
      },
      {
        "command": "rfKeywords.copyKeyword",
        "title": "Copy Keyword",
        "icon": "$(copy)"
      },
      {
        "command": "rfKeywords.customizeKeyword",
        "title": "Customize & Insert Keyword",
        "icon": "$(edit)"
      },
      {
        "command": "rfKeywords.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rfKeywords.editKeywordDefaults",
        "title": "Edit Keyword Defaults",
        "icon": "$(settings)"
      },
      {
        "command": "rfKeywords.addCustomKeyword",
        "title": "Add Custom Keyword",
        "icon": "$(plus)"
      },
      {
        "command": "rfKeywords.importFile",
        "title": "Import Library/Resource",
        "icon": "$(arrow-down)"
      },
      {
        "command": "rfVariables.insertVariable",
        "title": "Insert Variable",
        "icon": "$(add)"
      },
      {
        "command": "rfVariables.copyVariable",
        "title": "Copy Variable",
        "icon": "$(copy)"
      },
      {
        "command": "rfVariables.importFile",
        "title": "Import Variables File",
        "icon": "$(arrow-down)"
      },
      {
        "command": "rfVariables.refresh",
        "title": "Refresh Variables",
        "icon": "$(refresh)"
      },
      {
        "command": "rfCustomizer.editParameter",
        "title": "Edit Parameter",
        "icon": "$(edit)"
      },
      {
        "command": "rfCustomizer.resetParameter",
        "title": "Reset Parameter",
        "icon": "$(discard)"
      },
      {
        "command": "rfCustomizer.insertKeyword",
        "title": "Insert Customized Keyword",
        "icon": "$(add)"
      },
      {
        "command": "rfCustomizer.copyKeyword",
        "title": "Copy Customized Keyword",
        "icon": "$(copy)"
      },
      {
        "command": "rfCustomizer.clear",
        "title": "Clear Customizer",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "rfKeywords.insertKeyword",
          "when": "(view == rfProjectKeywords || view == rfOfficialKeywords) && viewItem == keyword",
          "group": "inline@1"
        },
        {
          "command": "rfKeywords.customizeKeyword",
          "when": "(view == rfProjectKeywords || view == rfOfficialKeywords) && viewItem == keyword",
          "group": "inline@2"
        },
        {
          "command": "rfKeywords.copyKeyword",
          "when": "(view == rfProjectKeywords || view == rfOfficialKeywords) && viewItem == keyword",
          "group": "inline@3"
        },
        {
          "command": "rfKeywords.importFile",
          "when": "view == rfProjectKeywords && viewItem == library",
          "group": "inline@1"
        },
        {
          "command": "rfVariables.insertVariable",
          "when": "view == rfVariables && viewItem == variable",
          "group": "inline@1"
        },
        {
          "command": "rfVariables.copyVariable",
          "when": "view == rfVariables && viewItem == variable",
          "group": "inline@2"
        },
        {
          "command": "rfVariables.importFile",
          "when": "view == rfVariables && viewItem == variableFile",
          "group": "inline@1"
        },
        {
          "command": "rfCustomizer.editParameter",
          "when": "view == rfKeywordCustomizer && viewItem == parameter",
          "group": "inline@1"
        },
        {
          "command": "rfCustomizer.resetParameter",
          "when": "view == rfKeywordCustomizer && viewItem == parameter",
          "group": "inline@2"
        }
      ],
      "view/title": [
        {
          "command": "rfKeywords.addCustomKeyword",
          "when": "view == rfProjectKeywords",
          "group": "navigation@1"
        },
        {
          "command": "rfKeywords.editKeywordDefaults",
          "when": "view == rfProjectKeywords || view == rfOfficialKeywords",
          "group": "navigation@2"
        },
        {
          "command": "rfKeywords.refresh",
          "when": "view == rfProjectKeywords",
          "group": "navigation@3"
        },
        {
          "command": "rfVariables.refresh",
          "when": "view == rfVariables",
          "group": "navigation@1"
        },
        {
          "command": "rfCustomizer.insertKeyword",
          "when": "view == rfKeywordCustomizer",
          "group": "navigation@1"
        },
        {
          "command": "rfCustomizer.copyKeyword",
          "when": "view == rfKeywordCustomizer",
          "group": "navigation@2"
        },
        {
          "command": "rfCustomizer.clear",
          "when": "view == rfKeywordCustomizer",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Robot Framework Keywords",
      "properties": {
        "robotFrameworkKeywords.customStyle": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom styling for keyword tree items"
        },
        "robotFrameworkKeywords.showIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show icons in keyword tree items"
        },
        "robotFrameworkKeywords.customKeywords": {
          "type": "array",
          "default": [],
          "description": "Custom keywords defined by the user",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "implementation": {"type": "string"},
              "library": {"type": "string"},
              "description": {"type": "string"}
            }
          }
        },
        "robotFrameworkKeywords.defaultValues": {
          "type": "object",
          "default": {
            "url": "https://example.com",
            "selector": "css=.my-element",
            "text": "Sample text",
            "browser": "chromium",
            "timeout": "10s",
            "filename": "screenshot.png",
            "path": "/path/to/file",
            "message": "Test message",
            "value": "test_value",
            "key": "test_key"
          },
          "description": "Default values for keyword parameters"
        },
        "robotFrameworkKeywords.scanCustomKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for custom keywords"
        },
        "robotFrameworkKeywords.pythonKeywordPaths": {
          "type": "array",
          "default": [],
          "description": "Paths to Python files containing Robot Framework keywords",
          "items": {"type": "string"}
        },
        "robotFrameworkKeywords.robotKeywordPaths": {
          "type": "array",
          "default": [],
          "description": "Paths to Robot Framework files containing custom keywords",
          "items": {"type": "string"}
        },
        "robotFrameworkKeywords.projectScanPaths": {
          "type": "array",
          "default": [
            "Libraries/**/*.py",
            "POM/**/*.{robot,resource}",
            "Utilities/**/*.{py,robot,resource}",
            "Resources/**/*.{py,robot,resource}",
            "*.resource"
          ],
          "description": "Glob patterns for scanning project keywords",
          "items": {"type": "string"}
        },
        "robotFrameworkKeywords.discoveredVariables": {
          "type": "array",
          "default": [],
          "description": "Variables discovered from the workspace",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "value": {"type": "string"},
              "type": {"type": "string"},
              "source": {"type": "string"},
              "filePath": {"type": "string"},
              "folderPath": {"type": "string"}
            }
          }
        },
        "robotFrameworkKeywords.scanVariables": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for variables"
        },
        "robotFrameworkKeywords.currentCustomizingKeyword": {
          "type": "object",
          "default": null,
          "description": "Currently selected keyword for customization",
          "properties": {
            "name": {"type": "string"},
            "implementation": {"type": "string"},
            "library": {"type": "string"},
            "parameters": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "value": {"type": "string"},
                  "defaultValue": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}