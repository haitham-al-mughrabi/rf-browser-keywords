{
  "name": "robot-framework-keywords",
  "displayName": "Robot Framework Keywords Explorer",
  "description": "Comprehensive Robot Framework extension with keyword explorer, auto-completion, documentation viewer, and project scanning capabilities",
  "version": "1.0.0",
  "publisher": "Haitham-Al-Mughrabi",
  "author": {
    "name": "Haitham Al-Mughrabi",
    "email": "haitham.m.almughrabi@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/haitham-al-mughrabi/rf-browser-keywords",
  "repository": {
    "type": "git",
    "url": "https://github.com/haitham-al-mughrabi/rf-browser-keywords.git"
  },
  "bugs": {
    "url": "https://github.com/haitham-al-mughrabi/rf-browser-keywords/issues"
  },
  "icon": "images/icon.png",
  "keywords": [
    "robot framework",
    "robotframework",
    "test automation",
    "keywords",
    "selenium",
    "browser testing",
    "automation",
    "testing"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rfKeywords",
          "title": "Robot Framework",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "rfKeywords": [
        {
          "id": "rfProjectKeywords",
          "name": "Project Keywords"
        },
        {
          "id": "rfOfficialKeywords",
          "name": "Official Keywords"
        },
        {
          "id": "rfVariables",
          "name": "Variables"
        },
        {
          "id": "rfDocumentation",
          "name": "Documentation"
        }
      ]
    },
    "commands": [
      {
        "command": "rfKeywords.insertKeyword",
        "title": "Insert Keyword",
        "icon": "$(add)"
      },
      {
        "command": "rfKeywords.copyKeyword",
        "title": "Copy Keyword",
        "icon": "$(copy)"
      },
      {
        "command": "rfKeywords.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rfKeywords.editKeywordDefaults",
        "title": "Edit Keyword Defaults",
        "icon": "$(settings)"
      },
      {
        "command": "rfKeywords.addCustomKeyword",
        "title": "Add Custom Keyword",
        "icon": "$(plus)"
      },
      {
        "command": "rfKeywords.importFile",
        "title": "Import Library/Resource",
        "icon": "$(arrow-down)"
      },
      {
        "command": "rfVariables.insertVariable",
        "title": "Insert Variable",
        "icon": "$(add)"
      },
      {
        "command": "rfVariables.copyVariable",
        "title": "Copy Variable",
        "icon": "$(copy)"
      },
      {
        "command": "rfVariables.importFile",
        "title": "Import Variables File",
        "icon": "$(arrow-down)"
      },
      {
        "command": "rfVariables.refresh",
        "title": "Refresh Variables",
        "icon": "$(refresh)"
      },
      {
        "command": "rfDocumentation.showKeywordDoc",
        "title": "Show Documentation",
        "icon": "$(book)"
      },
      {
        "command": "rfDocumentation.copyDocumentation",
        "title": "Copy Documentation",
        "icon": "$(copy)"
      },
      {
        "command": "rfDocumentation.clear",
        "title": "Clear Documentation",
        "icon": "$(clear-all)"
      },
      {
        "command": "rfKeywords.searchKeywords",
        "title": "Search Keywords",
        "icon": "$(search)"
      },
      {
        "command": "rfVariables.searchVariables",
        "title": "Search Variables",
        "icon": "$(search)"
      },
      {
        "command": "rfKeywords.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "rfVariables.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "rfKeywords.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "rfVariables.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "rfKeywords.insertKeyword",
          "when": "(view == rfProjectKeywords || view == rfOfficialKeywords) && viewItem == keyword",
          "group": "inline@1"
        },
        {
          "command": "rfDocumentation.showKeywordDoc",
          "when": "(view == rfProjectKeywords || view == rfOfficialKeywords) && viewItem == keyword",
          "group": "inline@4"
        },
        {
          "command": "rfKeywords.copyKeyword",
          "when": "(view == rfProjectKeywords || view == rfOfficialKeywords) && viewItem == keyword",
          "group": "inline@3"
        },
        {
          "command": "rfKeywords.importFile",
          "when": "view == rfProjectKeywords && (viewItem == 'Python Library' || viewItem == 'Resource Keywords' || viewItem == 'Robot Keywords')",
          "group": "inline@1"
        },
        {
          "command": "rfVariables.insertVariable",
          "when": "view == rfVariables && viewItem == variable",
          "group": "inline@1"
        },
        {
          "command": "rfVariables.copyVariable",
          "when": "view == rfVariables && viewItem == variable",
          "group": "inline@2"
        },
        {
          "command": "rfVariables.importFile",
          "when": "view == rfVariables && viewItem == variableFile",
          "group": "inline@1"
        },
        {
          "command": "rfKeywords.openFile",
          "when": "view == rfProjectKeywords && (viewItem == 'Python Library' || viewItem == 'Robot Keywords' || viewItem == 'Resource Keywords')",
          "group": "inline@2"
        },
        {
          "command": "rfVariables.openFile",
          "when": "view == rfVariables && (viewItem == pythonVariableFile || viewItem == robotVariableFile || viewItem == resourceVariableFile)",
          "group": "inline@2"
        }
      ],
      "view/title": [
        {
          "command": "rfKeywords.addCustomKeyword",
          "when": "view == rfProjectKeywords",
          "group": "navigation@1"
        },
        {
          "command": "rfKeywords.editKeywordDefaults",
          "when": "view == rfProjectKeywords || view == rfOfficialKeywords",
          "group": "navigation@2"
        },
        {
          "command": "rfKeywords.refresh",
          "when": "view == rfProjectKeywords",
          "group": "navigation@3"
        },
        {
          "command": "rfKeywords.searchKeywords",
          "when": "view == rfProjectKeywords || view == rfOfficialKeywords",
          "group": "navigation@4"
        },
        {
          "command": "rfKeywords.clearSearch",
          "when": "view == rfProjectKeywords || view == rfOfficialKeywords",
          "group": "navigation@5"
        },
        {
          "command": "rfVariables.refresh",
          "when": "view == rfVariables",
          "group": "navigation@1"
        },
        {
          "command": "rfVariables.searchVariables",
          "when": "view == rfVariables",
          "group": "navigation@2"
        },
        {
          "command": "rfVariables.clearSearch",
          "when": "view == rfVariables",
          "group": "navigation@3"
        },
        {
          "command": "rfDocumentation.copyDocumentation",
          "when": "view == rfDocumentation",
          "group": "navigation@1"
        },
        {
          "command": "rfDocumentation.clear",
          "when": "view == rfDocumentation",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Robot Framework Keywords",
      "properties": {
        "robotFrameworkKeywords.customStyle": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom styling for keyword tree items"
        },
        "robotFrameworkKeywords.showIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show icons in keyword tree items"
        },
        "robotFrameworkKeywords.customKeywords": {
          "type": "array",
          "default": [],
          "description": "Custom keywords defined by the user",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "implementation": {
                "type": "string"
              },
              "library": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "robotFrameworkKeywords.defaultValues": {
          "type": "object",
          "default": {
            "url": "https://example.com",
            "selector": "css=.my-element",
            "text": "Sample text",
            "browser": "chromium",
            "timeout": "10s",
            "filename": "screenshot.png",
            "path": "/path/to/file",
            "message": "Test message",
            "value": "test_value",
            "key": "test_key"
          },
          "description": "Default values for keyword parameters"
        },
        "robotFrameworkKeywords.scanCustomKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for custom keywords"
        },
        "robotFrameworkKeywords.pythonKeywordPaths": {
          "type": "array",
          "default": [],
          "description": "Paths to Python files containing Robot Framework keywords",
          "items": {
            "type": "string"
          }
        },
        "robotFrameworkKeywords.robotKeywordPaths": {
          "type": "array",
          "default": [],
          "description": "Paths to Robot Framework files containing custom keywords",
          "items": {
            "type": "string"
          }
        },
        "robotFrameworkKeywords.projectScanPaths": {
          "type": "array",
          "default": [
            "Libraries/**/*.py",
            "POM/**/*.{robot,resource}",
            "Utilities/**/*.{py,robot,resource}",
            "Resources/**/*.{py,robot,resource}",
            "*.resource"
          ],
          "description": "Glob patterns for scanning project keywords",
          "items": {
            "type": "string"
          }
        },
        "robotFrameworkKeywords.discoveredVariables": {
          "type": "array",
          "default": [],
          "description": "Variables discovered from the workspace",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "filePath": {
                "type": "string"
              },
              "folderPath": {
                "type": "string"
              }
            }
          }
        },
        "robotFrameworkKeywords.scanVariables": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for variables"
        },
        "robotFrameworkKeywords.currentDocumentationKeyword": {
          "type": "object",
          "default": null,
          "description": "Currently selected keyword for documentation display",
          "properties": {
            "name": {
              "type": "string"
            },
            "library": {
              "type": "string"
            },
            "documentation": {
              "type": "string"
            },
            "arguments": {
              "type": "array"
            },
            "source": {
              "type": "string"
            },
            "filePath": {
              "type": "string"
            },
            "returnType": {
              "type": "string"
            },
            "tags": {
              "type": "array"
            }
          }
        },
        "robotFrameworkKeywords.wrapVariables": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable wrapping of variables with ${} when inserting or copying"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0"
  }
}