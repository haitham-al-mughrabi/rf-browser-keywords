{
  "name": "rf-browser-keywords",
  "displayName": "Robot Framework Keywords",
  "description": "VS Code extension to show and insert Robot Framework standard library keywords",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "rfBrowserKeywords",
          "name": "Robot Framework Keywords"
        }
      ]
    },
    "commands": [
      {
        "command": "rfBrowserKeywords.insertKeyword",
        "title": "Insert Keyword",
        "icon": "$(add)"
      },
      {
        "command": "rfBrowserKeywords.copyKeyword",
        "title": "Copy Keyword",
        "icon": "$(copy)"
      },
      {
        "command": "rfBrowserKeywords.customizeKeyword",
        "title": "Customize & Insert Keyword",
        "icon": "$(edit)"
      },
      {
        "command": "rfBrowserKeywords.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rfBrowserKeywords.editKeywordDefaults",
        "title": "Edit Keyword Defaults",
        "icon": "$(settings)"
      },
      {
        "command": "rfBrowserKeywords.addCustomKeyword",
        "title": "Add Custom Keyword",
        "icon": "$(plus)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "rfBrowserKeywords.insertKeyword",
          "when": "view == rfBrowserKeywords && viewItem == keyword",
          "group": "inline@1"
        },
        {
          "command": "rfBrowserKeywords.customizeKeyword",
          "when": "view == rfBrowserKeywords && viewItem == keyword",
          "group": "inline@2"
        },
        {
          "command": "rfBrowserKeywords.copyKeyword",
          "when": "view == rfBrowserKeywords && viewItem == keyword",
          "group": "inline@3"
        }
      ],
      "view/title": [
        {
          "command": "rfBrowserKeywords.addCustomKeyword",
          "when": "view == rfBrowserKeywords",
          "group": "navigation@1"
        },
        {
          "command": "rfBrowserKeywords.editKeywordDefaults",
          "when": "view == rfBrowserKeywords",
          "group": "navigation@2"
        },
        {
          "command": "rfBrowserKeywords.refresh",
          "when": "view == rfBrowserKeywords",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Robot Framework Keywords",
      "properties": {
        "robotFrameworkKeywords.customStyle": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom styling for keyword tree items"
        },
        "robotFrameworkKeywords.showIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show icons in keyword tree items"
        },
        "robotFrameworkKeywords.customKeywords": {
          "type": "array",
          "default": [],
          "description": "Custom keywords defined by the user",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "implementation": {"type": "string"},
              "library": {"type": "string"},
              "description": {"type": "string"}
            }
          }
        },
        "robotFrameworkKeywords.defaultValues": {
          "type": "object",
          "default": {
            "url": "https://example.com",
            "selector": "css=.my-element",
            "text": "Sample text",
            "browser": "chromium",
            "timeout": "10s",
            "filename": "screenshot.png",
            "path": "/path/to/file",
            "message": "Test message",
            "value": "test_value",
            "key": "test_key"
          },
          "description": "Default values for keyword parameters"
        },
        "robotFrameworkKeywords.scanCustomKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for custom keywords"
        },
        "robotFrameworkKeywords.pythonKeywordPaths": {
          "type": "array",
          "default": [],
          "description": "Paths to Python files containing Robot Framework keywords",
          "items": {"type": "string"}
        },
        "robotFrameworkKeywords.robotKeywordPaths": {
          "type": "array",
          "default": [],
          "description": "Paths to Robot Framework files containing custom keywords",
          "items": {"type": "string"}
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}